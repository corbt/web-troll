li ng-repeat="result in results"
	.search-result ng-class-even="'even'"
		.left-side
			.title 
				a href="{{result.url}}"
					|{{result.title}}
			.author
				a href="{{result.author_url}}"
					|{{result.author}}
			.isbn isbn: {{result.isbn}}
		.right-side
			.reading-label Reading Level
			div ng-switch="!!result.reading_level"
				.level ng-switch-when="true" {{result.reading_level}}
				button.btn.calculate ng-switch-default='' ng-click="getReadingLevel(result)" Calculate